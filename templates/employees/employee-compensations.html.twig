{% extends 'base.html.twig' %}

{% block title %}Hello ApiController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    thead td  {
        list-style-type: none;
        background-color: #eeeeee;
    }
    tbody th td.field {
    }
</style>

<div class="example-wrapper">
    <h1>Employee: {{ employeeId }}</h1>

    Compensations
    <table class="list">
        <thead>
            <tr>
                <td>Employee</td>
                <td>Name</td>
                <td>Year</td>
                <td>Month</td>
                <td>Transport</td>
                <td>Distance</td>
                <td>Work days</td>
                <td>Compensation</td>
            </tr>
        </thead>
        <tbody>
        {% for compensation in compensations %}
            <tr class="row">
                <td class="field">{{ compensation.employeeId }}</td>
                <td class="field">{{ compensation.name }}</td>
                <td class="field">{{ compensation.year }}</td>
                <td class="field">{{ compensation.month }}</td>
                <td class="field">{{ compensation.transport }}</td>
                <td class="field">{{ compensation.totalDistance }}</td>
                <td class="field">{{ compensation.workDays }}</td>
                <td class="field">{{ compensation.amount|number_format(2, '.', ',') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
